<Application x:Class="Практика2Курс.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Практика2Курс"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="TextBlockDecor">
            <Setter Property="TextBlock.FontSize" Value="15"/>
            <Setter Property="TextBlock.FontStyle" Value="Italic"/>
            <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ButtonDecor">
            <Setter Property="Button.FontSize" Value="15"/>
            <Setter Property="Button.Margin" Value="20 0 20 0"/>
            <Setter Property="Button.Padding" Value="20 0 20 0"/>
            <Setter Property="Button.Height" Value="25"/>
        </Style>
        <Style x:Key="TextBoxDecor">
            <Setter Property="TextBox.FontSize" Value="15"/>
            <Setter Property="TextBox.Padding" Value="3"/>
        </Style>
    </Application.Resources>
</Application>
